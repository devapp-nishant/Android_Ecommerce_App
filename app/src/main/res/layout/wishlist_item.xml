<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wishItemImg"
            android:src="@drawable/box"
            android:padding="8dp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wishItemProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text_color"
                android:text="Product Name"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wishItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Price"
                    android:textColor="@color/text_color"/>


                <TextView
                    android:id="@+id/wishItemDiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="30% Off"
                    android:textColor="#F44336"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/wishItemFinalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Rs.79,895"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/wishItemViewProductBtn"
                app:layout_constraintEnd_toEndOf="@+id/wishItemDiscount"
                app:layout_constraintStart_toStartOf="@+id/wishItemPrice"
                app:layout_constraintTop_toBottomOf="@+id/wishItemPrice" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/wishItemViewProductBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_btn_bg"
                android:text="View Product"
                android:textColor="@color/text_color"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>